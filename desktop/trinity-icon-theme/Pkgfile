# Description: Trinity icon theme
# URL:         https://zeppe-lin.github.io/
# Depends on:  librsvg-compat hicolor-icon-theme

name=trinity-icon-theme
version=0.1
release=1
source=/dev/null

build() {
	mkdir -p $PKG/usr/share/icons/trinity
	cp -Pr $PKGMK_ROOT/src/* $PKG/usr/share/icons/trinity/

	# remove junk
	cd $PKG/usr/share/icons/trinity; rm LICENSE.* README
}
