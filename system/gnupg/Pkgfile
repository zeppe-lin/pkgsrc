# Description: GNU privacy guard
# URL:         https://www.gnupg.org
# Depends on:  bzip2 gnutls libassuan libgcrypt libksba libusb npth sqlite3

name=gnupg
version=2.3.8
release=7n
source="https://gnupg.org/ftp/gcrypt/gnupg/gnupg-$version.tar.bz2
	gnupg-2.2.40-fix-no-ldap-build.patch"

build() {
	# Fix build with no LDAP support.
	patch -p1 -d $name-$version \
		-i $SRC/gnupg-2.2.40-fix-no-ldap-build.patch

	mkdir build; cd build

	# --disable-tests is ommited for gpgscm utility
	../$name-$version/configure    \
		--prefix=/usr          \
		--libexecdir=/usr/lib  \
		--localstatedir=/var   \
		--sysconfdir=/etc      \
		--disable-ldap         \
		--disable-nls          \
		#--disable-tests       \

	make V=1
	make DESTDIR=$PKG install

	# remove junk
	rm -r	$PKG/usr/share/info  $PKG/usr/share/doc \
		$PKG/usr/share/gnupg/help*
}
