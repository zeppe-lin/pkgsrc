# Description: Perl programming language
# URL:         https://www.perl.org/
# Depends on:  db gdbm libnsl

name=perl
version=5.34.1
release=7n
source=https://www.cpan.org/src/5.0/$name-$version.tar.xz

build() {
	cd perl-$version

	./Configure                                                \
		-des                                               \
		-Dprefix=/usr                                      \
		-Dvendorprefix=/usr                                \
		-Dprivlib=/usr/lib/perl5/${version%.*}             \
		-Dsitelib=/usr/lib/perl5/site_perl/${version%.*}   \
		-Dvendorlib=/usr/lib/perl5/site_perl/${version%.*} \
		-Darchname=linux                                   \
		-Dman1ext=1pm                                      \
		-Dman3ext=3pm                                      \
		-Di_gdbm                                           \
		-Di_db                                             \
		-Duseshrplib                                       \
		-Dusethreads                                       \
		-Doptimize="$CFLAGS"                               \

	make
	make DESTDIR=$PKG install

	ln -sf perl${version%-*} $PKG/usr/bin/perl
	ln -sf perlbug.1pm       $PKG/usr/share/man/man1/perlthanks.1pm

	# remove junk
	find $PKG -type f \( -iname TODO\* -o -iname Change\* \
		-o -iname README\* -o -name \*.bs -o -name .packlist \
		-o -name perllocal.pod \) -delete

	# remove empty dirs
	find $PKG -type d -empty -delete

	# fix perms
	chmod -R +w $PKG
}
