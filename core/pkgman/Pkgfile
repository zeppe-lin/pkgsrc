# Description: Advanced package management tool
# URL:         https://zeppe-lin.github.io/

name=pkgman
version=6.0
release=1
source="src/*.cpp
	src/*.h
	src/*.pod
	src/config.mk
	src/Makefile
	src/bash_completion

	pkgman.conf"

build() {
	# it's safe to optimize
	CXXFLAGS="$(echo "$CXXFLAGS" | sed 's/-O. /-O3 /')"

	make DESTDIR=$PKG install

	install -m 0644 -Dt $PKG/etc/ pkgman.conf
	install -m 0644 -D bash_completion \
		$PKG/usr/share/bash-completion/completions/$name
}
